<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ink">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ink.activities.Login"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" />
        <activity
            android:name="ink.activities.Intro"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ink.activities.Registration"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="ink.activities.HomeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/feedText"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="ink.activities.Profile"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppTheme" />
        <activity
            android:name="ink.activities.Chat"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <service android:name="ink.utils.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="ink.utils.FirebaseInstanceService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <!--<service android:name="com.facebook.push.fbpushdata.FbPushDataHandlerService" />-->
        <!--<receiver android:name="com.facebook.messaging.sms.defaultapp.PrivilegedMmsReceiver" android:permission="android.permission.BROADCAST_WAP_PUSH">-->
            <!--<intent-filter>-->
                <!--<action android:name="android.provider.Telephony.WAP_PUSH_DELIVER" />-->
                <!--<data android:mimeType="application/vnd.wap.mms-message" />-->
            <!--</intent-filter>-->
        <!--</receiver>-->
    </application>

</manifest>