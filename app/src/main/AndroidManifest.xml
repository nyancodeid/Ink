<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ink">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>

    <application
        android:name="ink.StartupApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ink.activities.Login"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" />
        <activity
            android:name="ink.activities.Intro"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ink.activities.Registration"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="ink.activities.HomeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/feedText"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="ink.activities.OpponentProfile"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppTheme" />
        <activity
            android:name="ink.activities.Chat"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <service android:name="ink.service.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="ink.service.FirebaseInstanceService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name="ink.service.BackgroundTaskService" />
        <service android:name="ink.service.SendTokenService" />
        <service android:name="ink.service.SendReplyService" />

        <activity
            android:name="ink.activities.NotificationView"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.Transparent"
            android:windowSoftInputMode="stateAlwaysVisible" />
        <activity
            android:name="ink.activities.MyProfile"
            android:theme="@style/ProfileNoActionBar"></activity>
    </application>

</manifest>