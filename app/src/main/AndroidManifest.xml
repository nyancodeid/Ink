        <activity
            android:name="ink.activities.Chat"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/ChatTheme" />

        <service android:name="ink.service.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="ink.service.FirebaseInstanceService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
