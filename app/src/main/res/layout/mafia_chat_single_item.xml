<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/messageWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mafiaChatUserImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/messageUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:fontFamily="@string/condensedFont"
            android:maxLines="1"
            android:maxWidth="200dp"
            android:text="@string/loadingText"
            android:textColor="@color/defaultGroupColor"
            android:textSize="12sp" />


        <android.support.v7.widget.CardView
            android:id="@+id/mafiaMessageCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/defaultGroupColor"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/mafiaMessageContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:fontFamily="@string/condensedFont"
                android:maxWidth="200dp"
                android:text="hello guys"
                android:textColor="@color/vk_white" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>