<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/logged_in_background"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/title_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/profileContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.facebook.login.widget.ProfilePictureView
                    android:id="@+id/userImage"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="18dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/welcomeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_message" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="4dip">

                        <ImageView
                            android:id="@+id/coinImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:src="@drawable/small_coins_icon" />

                        <TextView
                            android:id="@+id/numCoins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@string/appFont"
                            android:text="@string/loadingText" />

                        <ImageView
                            android:id="@+id/bombButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:padding="5dp"
                            android:src="@drawable/small_bomnb_vector" />

                        <TextView
                            android:id="@+id/numBombs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/loadingText" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout> <!-- ProfileContainer -->


            <RelativeLayout
                android:id="@+id/bottomSectionContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/mainButtonsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <RelativeLayout
                        android:id="@+id/playButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/playImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/playnow_button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:layout_toRightOf="@+id/playImageView"
                            android:fontFamily="@string/appFont"
                            android:text="@string/start_fight"
                            android:textColor="#6b0000"
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/playButtonDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/playButton"
                        android:layout_marginTop="5dp"
                        android:background="#b3b3b3">

                    </View>


                    <RelativeLayout
                        android:id="@+id/scoresButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/playButton"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/leaderboardImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/leaderboard_button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:layout_toRightOf="@+id/leaderboardImageView"
                            android:fontFamily="@string/appFont"
                            android:text="@string/leaderboard_text"
                            android:textColor="#6b0000"
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/scoresDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/scoresButton"
                        android:layout_marginTop="5dp"
                        android:background="#b3b3b3">

                    </View>


                    <RelativeLayout
                        android:id="@+id/challengeButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/scoresButton"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/challengeImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/challenge_button" />

                        <TextView
                            android:id="@+id/challengeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/challengeImageView"
                            android:fontFamily="@string/appFont"
                            android:text="@string/challenge_friend"
                            android:textColor="#6b0000"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/challengeDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/challengeButton"
                        android:layout_marginTop="5dp"
                        android:background="#b3b3b3">

                    </View>

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/singInWithGoogle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/challengeDivider"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/challengeContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/mfsClicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="70dp"
                        android:src="@drawable/challenge_button" />

                    <GridView
                        android:id="@+id/invitesGridView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:columnWidth="140dp"
                        android:gravity="center"
                        android:horizontalSpacing="10dp"
                        android:numColumns="auto_fit"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="10dp" />

                    <GridView
                        android:id="@+id/requestsGridView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:columnWidth="140dp"
                        android:gravity="center"
                        android:horizontalSpacing="10dp"
                        android:numColumns="auto_fit"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="10dp" />

                    <ImageView
                        android:id="@+id/sendButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="350dp"
                        android:paddingLeft="90dp"
                        android:src="@drawable/send_button" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/gameOverContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="gone">

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/youSmashedUserImage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/game_over" />

            <TextView
                android:id="@+id/scoredTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:paddingLeft="40dp"
                android:paddingRight="40dp" />

            <ImageView
                android:id="@+id/gameOverChallengeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/challenge_button" />

            <ImageView
                android:id="@+id/gameOverBragButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/brag_button" />

            <ImageView
                android:id="@+id/gameOverCloseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/close_button" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>