<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/closeConnectivityWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="10dp"
        android:src="@drawable/close_vector_grey" />

    <ImageView
        android:id="@+id/connectivityImage"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_gravity="center"
        android:src="@drawable/sad" />

    <TextView
        android:id="@+id/connectivityWarningTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/notConnectedToServer"
        android:textStyle="bold" />

    <Button
        android:id="@+id/retryConnecting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle_transparent_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/vk_retry"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary" />
</LinearLayout>