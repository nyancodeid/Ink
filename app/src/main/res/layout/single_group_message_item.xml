<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/groupMessageCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="15dp"
        android:minHeight="100dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/messageSenderImage"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/messageSenderName"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/messageSenderImage"
                android:layout_toRightOf="@+id/messageSenderImage"
                android:ellipsize="end"
                android:fontFamily="@string/appFont"
                android:maxLines="1"
                android:text="@string/loadingText"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/groupMessageBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/messageSenderImage"
                android:layout_alignStart="@+id/messageSenderImage"
                android:layout_below="@+id/messageSenderImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@string/appFont"
                android:gravity="start"
                android:paddingLeft="5dp"
                android:text="@string/loadingText" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>