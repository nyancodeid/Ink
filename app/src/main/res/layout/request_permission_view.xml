<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/grantPermissionHeader"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/request_permission_header_drawable">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@string/appFont"
                    android:text="@string/permissionNeeded"
                    android:textColor="@color/vk_white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/grantPermission"
                android:layout_below="@+id/grantPermissionHeader"
                android:layout_margin="10dp"
                android:fillViewport="true"
                android:scrollbars="none">

                <TextView
                    android:id="@+id/permissionRequestTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@string/appFont"
                    android:text="@string/loadingText" />
            </ScrollView>


            <TextView
                android:id="@+id/grantPermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="30dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5dp"
                android:text="@string/grant"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/cancelRequestPermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5dp"
                android:text="@string/cancel"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>