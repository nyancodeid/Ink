<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_layer_gradient"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ink.activities.ChatRoulette">

        <TextView
            android:id="@+id/headerTextChatroulette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@string/appFont"
            android:text="@string/chatRouletteText"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />


        <View
            android:id="@+id/chatRouletteDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/headerTextChatroulette"
            android:layout_marginTop="20dp"
            android:background="@color/linesColor">

        </View>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/joinWaitRoom"
            android:layout_below="@+id/chatRouletteDivider"
            android:src="@drawable/random_chat_image" />

        <Button
            android:id="@+id/joinWaitRoom"
            style="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_corner"
            android:fontFamily="@string/appFont"
            android:text="@string/joinWaitRoom"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
