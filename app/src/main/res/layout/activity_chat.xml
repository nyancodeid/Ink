<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_backgrond_color"
    tools:context="ink.activities.Chat">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/writeField">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/writeField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/write_message_background">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/writeEditTextInputter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/writeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/writeMessageHint"
                android:imeActionId="@+id/send"
                android:imeActionLabel="..."
                android:imeOptions="actionUnspecified"
                android:maxHeight="80dp"
                android:minHeight="50dp"
                android:paddingLeft="15dp" />

        </android.support.design.widget.TextInputLayout>


        <fab.FloatingActionButton
            android:id="@+id/sendChatMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/writeEditTextInputter"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_send_white_24dp"
            fab:fab_colorNormal="@color/colorPrimary"
            fab:fab_colorPressed="@color/colorPrimaryDark"
            fab:fab_label="@string/sendMessage"
            fab:fab_size="mini" />
    </RelativeLayout>
</RelativeLayout>
