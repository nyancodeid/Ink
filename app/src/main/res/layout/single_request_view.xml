<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/requestRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/requesterImage"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/requesterMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/requesterImage"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/requesterImage"
        android:fontFamily="@string/appFont"
        android:text="@string/loadingText" />

    <fab.FloatingActionButton
        android:id="@+id/declineRequest"
        style="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/requesterImage"
        android:layout_marginLeft="30dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@string/appFont"
        android:foreground="?attr/selectableItemBackground"
        android:src="@drawable/decline_icon"
        android:text="@string/declineText"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        app:fab_colorRipple="#cccccc"
        app:fab_size="mini" />


    <fab.FloatingActionButton
        android:id="@+id/acceptRequest"
        style="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/requesterImage"
        android:layout_marginRight="30dp"
        android:background="#3F51B5"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@string/appFont"
        android:foreground="?attr/selectableItemBackground"
        android:padding="5dp"
        android:src="@drawable/accept_icon"
        android:text="@string/acceptText"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        app:fab_colorNormal="#3F51B5"
        app:fab_colorPressed="#3F51B5"
        app:fab_colorRipple="#cccccc"
        app:fab_size="mini" />

</RelativeLayout>