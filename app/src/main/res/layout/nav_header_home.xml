<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panelHeader"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin">


    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_above="@+id/userNameTextView"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:fontFamily="@string/condensedFont"
        android:text="@string/loadingText"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/coinsImage"
        android:layout_width="24dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/profileImage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/profileImage"
        android:src="@drawable/coins_image" />

    <TextView
        android:id="@+id/coinsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/coinsImage"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/coinsImage"
        android:fontFamily="@string/condensedFont"
        android:text="@string/loadingText"
        android:textColor="#ffd200" />

    <ImageView
        android:layout_toRightOf="@+id/userNameTextView"
        android:layout_width="32dp"
        android:layout_marginTop="-10dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/userNameTextView"
        android:src="@mipmap/ic_launcher" />
</RelativeLayout>
