<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logged_in_background"
    android:fillViewport="true">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/title_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/profileContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="18dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/welcomeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_message" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="4dip">

                        <RelativeLayout
                            android:id="@+id/coinsWrapper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/coinImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:src="@drawable/small_coins_icon" />

                            <TextView
                                android:id="@+id/numCoins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/coinImage"
                                android:fontFamily="@string/appFont"
                                android:text="@string/loadingText" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bombsWrapper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/bombButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:padding="5dp"
                                android:src="@drawable/small_bomnb_vector" />

                            <TextView
                                android:id="@+id/numBombs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/bombButton"
                                android:text="@string/loadingText" />
                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout> <!-- ProfileContainer -->


            <RelativeLayout
                android:id="@+id/bottomSectionContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/mainButtonsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <RelativeLayout
                        android:id="@+id/playButtonWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/playImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/playnow_button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:layout_toRightOf="@+id/playImageView"
                            android:fontFamily="@string/appFont"
                            android:text="@string/start_fight"
                            android:textColor="#6b0000"
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/playButtonDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/playButtonWrapper"
                        android:layout_marginTop="5dp"
                        android:background="#b3b3b3">

                    </View>


                    <RelativeLayout
                        android:id="@+id/scoresButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/playButtonWrapper"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/leaderboardImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/leaderboard_button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:layout_toRightOf="@+id/leaderboardImageView"
                            android:fontFamily="@string/appFont"
                            android:text="@string/leaderboard_text"
                            android:textColor="#6b0000"
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/scoresDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/scoresButton"
                        android:layout_marginTop="5dp"
                        android:background="#b3b3b3">

                    </View>


                    <RelativeLayout
                        android:id="@+id/challengeButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/scoresButton"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/challengeImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/challenge_button" />

                        <TextView
                            android:id="@+id/challengeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/challengeImageView"
                            android:fontFamily="@string/appFont"
                            android:text="@string/challenge_friend"
                            android:textColor="#6b0000"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/challengeDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/challengeButton"
                        android:layout_marginTop="5dp"
                        android:background="#b3b3b3">

                    </View>

                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>