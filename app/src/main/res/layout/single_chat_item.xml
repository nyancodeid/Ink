<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/chatVideoWrapper"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/grey_transparent_rectangle"
        android:elevation="20dp"
        android:visibility="visible">


        <VideoView
            android:id="@+id/chatVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" />

        <ProgressBar
            android:id="@+id/video_loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/singleGifViewWrapper"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:visibility="visible">


        <ImageView
            android:id="@+id/gifChatView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="74dp"
            android:maxWidth="74dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chatViewBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/outgoing_message_bg">

        <TextView
            android:id="@+id/messageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/normalFont"
            android:maxWidth="200dp"
            android:padding="2dp"
            android:text="@string/loadingText"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/deliveryStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatViewBubble"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/sendingNowText"
        android:textSize="10sp"
        android:visibility="gone" />
</LinearLayout>