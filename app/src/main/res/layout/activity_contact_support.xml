<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="ink.va.activities.ContactSupport">


    <TextView
        android:id="@+id/assistTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@string/appFont"
        android:text="@string/needAnHelp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/selectIssueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assistTV"
        android:layout_marginTop="10dp"
        android:fontFamily="@string/appFont"
        android:text="@string/issueType"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/issueTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectIssueTV"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_transparent_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:minHeight="40dp">

        <TextView
            android:id="@+id/issueTypeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/issueTypeDropDown"
            android:fontFamily="@string/appFont"
            android:text="@string/chooseIssueType" />

        <ImageView
            android:id="@+id/issueTypeDropDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/arrow_down_simple" />
    </RelativeLayout>

    <TextView
        android:id="@+id/chooseEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/issueTypeLayout"
        android:layout_marginTop="10dp"
        android:fontFamily="@string/appFont"
        android:text="@string/contactBackEmail"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/chooseEmailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseEmail"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_transparent_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:minHeight="40dp">

        <TextView
            android:id="@+id/emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/emailDropDown"
            android:fontFamily="@string/appFont"
            android:text="@string/chooseEmail" />

        <ImageView
            android:id="@+id/emailDropDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/arrow_down_simple" />
    </RelativeLayout>

    <TextView
        android:id="@+id/additionalInformationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseEmailLayout"
        android:layout_marginTop="10dp"
        android:fontFamily="@string/appFont"
        android:text="@string/fillAdditionalInformation"
        android:textSize="16sp"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/supportMessageInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/additionalInformationTV"
        android:layout_marginTop="10dp">

        <AutoCompleteTextView
            android:id="@+id/supportMessageInputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/appFont"
            android:hint="@string/writeIssue"
            android:maxLines="3" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sendIssueButton"
        android:layout_below="@+id/supportMessageInputLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/contact_support_background" />

    <fab.FloatingActionButton
        android:id="@+id/sendIssueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_send_white_24dp"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_colorRipple="#cccccc"
        fab:fab_label="@string/sendMessage"
        fab:fab_size="normal" />

    <RelativeLayout
        android:id="@+id/warningLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:visibility="gone">

        <TextView
            android:id="@+id/warningText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@string/appFont"
            android:text="@string/allFieldsMandatory"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dismissSupportWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/close_vector" />
    </RelativeLayout>
</RelativeLayout>
